generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid()) @map("_id")
  firstName String
  lastName  String
  avatar    String?

  username String @unique
  email    String @unique
  password String

  location  String?
  github    String?
  linkedin  String?
  portfolio String?

  posts Post[]

  created_at DateTime @default(now())

  @@map("users")
}

model Post {
  id          String  @id @default(uuid()) @map("_id")
  title       String
  description String
  deploy      String?
  repo        String?

  user   User   @relation(fields: [userId], references: [id])
  userId String

  created_at DateTime @default(now())

  @@map("posts")
}
