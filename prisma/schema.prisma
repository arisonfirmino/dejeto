generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid()) @map("_id")
  firstName String
  lastName  String
  avatar    String?

  username String @unique
  email    String @unique
  password String

  location  String?
  github    String?
  linkedin  String?
  portfolio String?

  created_at DateTime @default(now())

  @@map("users")
}
